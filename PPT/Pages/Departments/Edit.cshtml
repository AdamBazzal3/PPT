@page
@model PPT.Pages.Departments.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1> تعديل القسم</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Department.ID" />
            <div class="form-group">
                <label asp-for="Department.Name" class="control-label"></label>
                <input asp-for="Department.Name" class="form-control" />
                <span asp-validation-for="Department.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.BranchID" class="control-label"></label>
                <select asp-for="Department.BranchID" class="form-control" asp-items="ViewBag.BranchID"></select>
                <span asp-validation-for="Department.BranchID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.SecretaryID" class="control-label"></label>
                <select asp-for="Department.SecretaryID" class="form-control" asp-items="ViewBag.SecretaryID"></select>
                <span asp-validation-for="Department.SecretaryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.HeadID" class="control-label"></label>
                <select asp-for="Department.HeadID" class="form-control" asp-items="ViewBag.HeadID"></select>
                <span asp-validation-for="Department.HeadID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-accent" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">الرجوع</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
