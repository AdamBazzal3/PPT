@page 
@model SignupModel
@{
    ViewData["Title"] = "Sign up";
}

<div class="container d-flex flex-column justify-content-center align-items-center my-auto">
    <div class="border border-1 border-muted px-5 py-4 shadow-lg rounded-4 auth-form-width">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="mb-5 text-center">Sign up</h2>
            <div class="d-flex flex-column gap-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating d-flex flex-column gap-2">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger form-err"></span>
                    </div>
                    <div class="form-floating d-flex flex-column gap-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger form-err"></span>
                    </div>
                    <div class="form-floating d-flex flex-column gap-2">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger form-err"></span>
                    </div>
                <div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-accent text-primary">Sign up</button>
                </div>
                <div>
                    <p class="text-muted fw-light">Already have an account? <a class="text-accent" asp-area="Identity" asp-page="/Account/SignIn">Sign in</a></p>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
